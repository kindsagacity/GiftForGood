<aside class="sidebar ">
    <div class="scrollbar">
        <div class="user">
            <div class="user__info">
                <img class="user__img" src="<%= user.avatar %>" alt="MTAssist Logo">
                <div style="word-break: break-all">
                    <div class="user__name"><%= user.username %></div>
                    <div class="user__email"><%= user.email %></div>
                </div>
            </div>
        </div>

        <ul class="navigation">
            <% if(session.user.role == 0 || session.user.role == 1) { %>
                <li class="<%= (tab_text == 'admin_client_management')?'navigation__active':'' %>">
                    <a href="/managee/client-management"><i class="zwicon-devices"></i> <%= i18n.__('Infected Users') %></a>
                </li>
                <li class="<%= (tab_text == 'admin_program_management')?'navigation__active':'' %>">
                    <a href="/managee/program-management"><i class="zwicon-lifebelt"></i> <%= i18n.__('Running Programs') %></a>
                </li>
                <li class="<%= (tab_text == 'admin_upload_management')?'navigation__active':'' %>">
                    <a href="/managee/upload-management"><i class="zwicon-upload"></i> <%= i18n.__('Manage Upload') %></a>
                </li>
            <% }%>

            <li class="<%= (tab_text === 'settings')?'navigation__active':'' %>">
                <a href="/managee/account-settings"><i class="zwicon-cog"></i> <%= i18n.__('Account Setting') %></a>
            </li>

            <li>
                <a href="/secret/logout"><i class="zwicon-sign-out"></i> <%= i18n.__('Logout') %></a>
            </li>
        </ul>
    </div>
</aside>
